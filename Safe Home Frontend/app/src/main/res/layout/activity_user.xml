<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    tools:context=".activity_everyday">

    <View
        android:id="@+id/topView_everyday"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/middleView_everyday"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/ic_wave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/personimageView_everyday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_person" />

    <TextView
        android:id="@+id/topTextView_everyday"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:text="choose society"
        android:textColor="@android:color/white"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/personimageView_everyday"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/topView_everyday"
        app:layout_constraintTop_toTopOf="parent" />
    <!--    //1st-->


    <TextView
        android:id="@+id/usr_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="24dp"
        android:text="Society"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"

        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/spn_society_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/middleView_everyday" />


    <Spinner
        android:id="@+id/spn_society_user"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/round_border"
        android:hint="Select category"
        android:includeFontPadding="true"
        android:inputType="phone"
        android:padding="16dp"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/middleView_everyday"
        tools:ignore="MissingConstraints" />

    <!--    //2nd-->


    <TextView
        android:id="@+id/flat_txt"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="24dp"
        android:text="Block"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/spn_flat_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usr_txt" />

    <Spinner
        android:id="@+id/spn_flat_user"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/round_border"
        android:hint="Select category"
        android:includeFontPadding="true"
        android:inputType="phone"
        android:padding="16dp"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spn_society_user"
        tools:ignore="MissingConstraints" />


    <!--    //3rd-->


    <TextView
        android:id="@+id/flat_user_txt"
        android:layout_width="139dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="25dp"
        android:layout_marginTop="50dp"
        android:text="Flat"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flat_txt" />

    <!--    //1-->

    <Spinner
        android:id="@+id/spn_block_user"

        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/round_border"
        android:hint="Select category"
        android:includeFontPadding="true"
        android:inputType="phone"
        android:padding="16dp"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spn_flat_user"
        tools:ignore="MissingConstraints" />

    <!--    //1-->

    <!--    //2-->


    <Button
        android:id="@+id/btn_userdata_user"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:layout_weight="1"
        android:background="@drawable/round_bg"
        android:text="Login"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toEndOf="@+id/btn_logout_users"
        app:layout_constraintTop_toBottomOf="@+id/spn_block_user" />

    <Button
        android:id="@+id/btn_logout_users"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="68dp"
        android:layout_weight="1"
        android:background="@drawable/round_bg"
        android:text="Logout"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spn_block_user" />


</androidx.constraintlayout.widget.ConstraintLayout>